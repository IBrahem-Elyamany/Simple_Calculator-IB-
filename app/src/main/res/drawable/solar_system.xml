<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Black background -->
        </shape>
    </item>

    <!-- Grid of Solar Cells (Horizontal) -->
    <item>
        <shape android:shape="rectangle">
            <size android:width="250dp" android:height="45dp" /> <!-- Adjust dimensions to match image proportions -->
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Individual Solar Cells (Rows and Columns) -->
    <item>
        <layer-list>
            <item android:left="0dp">
                <shape android:shape="rectangle">
                    <size android:width="40dp" android:height="40dp" />
                    <solid android:color="#352A16" />
                    <stroke android:width="2dp" android:color="#1E1E1E" />
                </shape>
            </item>
            <item android:left="70dp" >
                <shape android:shape="rectangle">
                    <size android:width="40dp" android:height="40dp" />
                    <solid android:color="#352A16" />
                    <stroke android:width="2dp" android:color="#1E1E1E" />
                </shape>
            </item>
            <item android:left="140dp" >
                <shape android:shape="rectangle">
                    <size android:width="80dp" android:height="80dp" />
                    <solid android:color="#352A16" />
                    <stroke android:width="2dp" android:color="#1E1E1E" />
                </shape>
            </item>
            <item android:left="210dp" >
                <shape android:shape="rectangle">
                    <size android:width="80dp" android:height="80dp" />
                    <solid android:color="#352A16" />
                    <stroke android:width="2dp" android:color="#1E1E1E" />
                </shape>
            </item>

        </layer-list>
    </item>
</layer-list>
